<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgrey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            style="@style/regularButton"
            android:id="@+id/registerB"
            android:layout_width="335dp"
            android:layout_height="60dp"
            android:background="@drawable/viewpadding"
            android:text="Далее"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/avenirblack"
                        android:text="Регистрация"
                        android:textColor="@color/textColor"
                        android:textSize="24sp" />
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/rubik"
                        android:text="твоего аккаунта"
                        android:layout_marginBottom="24dp"
                        android:textColor="@color/textColor"
                        android:textSize="16sp" />
                </LinearLayout>
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/buttonback"
                    android:src="@drawable/cross"
                    android:contentDescription="Назад" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/selectPicButton"
                        android:layout_width="132dp"
                        android:layout_height="132dp"
                        android:contentDescription="setPicture"
                        android:background="@drawable/selectpicb"/>
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@drawable/viewpadding"
                            android:hint="Имя"
                            android:textColor="@color/textColor"
                            android:textSize="16sp"
                            android:fontFamily="@font/rubik"
                            android:textColorHint="@color/textColor"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:inputType="text|textCapWords"
                            android:layout_marginBottom="20dp"/>
                        <TextView
                            android:id="@+id/userBD"
                            android:layout_width="match_parent"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textSize="16sp"
                            android:textColor="@color/textColor"
                            android:paddingBottom="20dp"
                            android:fontFamily="@font/rubik"
                            android:paddingTop="20dp"
                            android:layout_height="56dp"
                            android:text="Выбор даты"
                            android:background="@drawable/viewpadding"
                            android:backgroundTint="@color/grey"/>
                    </LinearLayout>


                </LinearLayout>
                <EditText
                    android:id="@+id/userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/rubik"
                    android:background="@drawable/viewpadding"
                    android:hint="+7 999 888 00 00"
                    android:textColorHint="@color/textColor"
                    android:paddingLeft="20dp"
                    android:textColor="@color/textColor"
                    android:paddingRight="20dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="20dp"/>
                <EditText
                    android:id="@+id/userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/viewpadding"
                    android:hint="Пароль"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/rubik"
                    android:textColorHint="@color/textColor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginBottom="20dp"/>
                <EditText
                    android:id="@+id/passwordConfirmation"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/viewpadding"
                    android:hint="Подтверждение пароля"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:fontFamily="@font/rubik"
                    android:textColorHint="@color/textColor"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:inputType="textVisiblePassword"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>